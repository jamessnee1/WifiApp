<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenuActivity"
    android:background="#282828">


    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="Start new hotspot"
        android:textSize="12dp"
        android:id="@+id/startHotspotButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startHotspotButtonPressed"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Connect to existing hotspot"
        android:textSize="12dp"
        android:id="@+id/existingHotspotButton"
        android:layout_below="@+id/startHotspotButton"
        android:layout_centerHorizontal="true"
        android:onClick="connectToHotspotButtonPressed"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Settings"
        android:textSize="12dp"
        android:id="@+id/settingsButton"
        android:layout_below="@+id/existingHotspotButton"
        android:layout_centerHorizontal="true"
        android:onClick="settingsButtonPressed"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/wifilogo"
        android:id="@+id/wifilogo"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
